<Page x:Class="GroundTerminalSoftware.Pages.SearchDatabase"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GroundTerminalSoftware.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SearchDatabase">

    <Grid>
        <Label Name="SearchLable" Content="Search Database" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,-150,0,0"/>
        <Label Name="TailNumLable" Content="Tail Number:" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="-260,-70,0,0"/>

        <TextBox Name="SearchBox" VerticalAlignment="Center" HorizontalAlignment="Center" Height="20" Width="176" Background="White" Margin="0,-70,0,0"/>

        <Button Content="Search" VerticalAlignment="Center" HorizontalAlignment="Center" Height="20" Width="100" BorderThickness="0" Click="Search_Database" Margin="0,10,0,0"/>
        <Label Name="SearchResult" Content="" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" Width="800" Margin="0,150,0,0"/>
    </Grid>
</Page>
